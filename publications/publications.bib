@Article{iasc.2023.039607,
AUTHOR = {Jaime Ortiz Córdoba, Alejandro Molina Zarca, Antonio Skármeta},
TITLE = {Unmanned Aerial Vehicle Multi-Access Edge Computing as Security Enabler for Next-Gen 5G Security Frameworks},
JOURNAL = {Intelligent Automation \& Soft Computing},
VOLUME = {37},
YEAR = {2023},
NUMBER = {2},
PAGES = {2307--2333},
